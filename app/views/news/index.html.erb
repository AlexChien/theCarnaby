<%content_for :main do%>
<h2>所有新闻</h2>
<div class="toolbar">
	<ul class="actions">
		<li>
			<a class="button" href="/news/new"><span><img src="/images/admin/add.png" alt="新增"> &nbsp;新增新闻</span></a>
		</li>
	</ul>
</div>

<hr class="space">

<table class="index">
	<thead>
		<!--<th><a class="ascending" href="#">▲&nbsp;品牌名</a></th>-->
		<th>标题</th>
		<th>新闻时间</th>
		<th>操作</th>
	</thead>
	<tbody>
		<%@news.each do |news|%>
		<tr id="news_<%=news.id%>">
			<td><a href="/news/<%=news.id%>"><%=news.title%></a></td>
			<td><%=news.news_date.strftime("%Y %m %d")%></td>
			<td>
				<%= link_to "<img src='/images/admin/edit.png' alt='编辑'> 编辑", edit_news_url(news)%>
				<%= link_to "<img src='/images/admin/delete.png' alt='删除'> 删除", news_url(news), :method => :delete, :confirm => "确认要删除此新闻吗?"%>
			</td>
		</tr>
		<%end%>
	</tbody>
</table>

<%=will_paginate @news%>
<%end%>

<%content_for :sidebar do%>
	<%=render :partial=>"search"%>
<%end%>