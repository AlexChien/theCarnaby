<%content_for :main do%>
<h2>编辑新闻</h2>

<hr class="space">

<% form_for(@news, :url => news_url(@news)) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :title_en %><br />
    <%= f.text_field :title_en %>
  </p>
  <p>
    <%= f.label :body %><br />
	<%= fckeditor_textarea("news", "body", :toolbarSet => 'Simple', :width => '100%', :height => '350px',  :path => "/") %>
  </p>
  <p>
    <%= f.label :body_en %><br />
	<%= fckeditor_textarea("news", "body_en", :toolbarSet => 'Simple', :width => '100%', :height => '350px',  :path => "/") %>
  </p>
  <p>
    <%= f.label :news_date %><br />
    <%= f.date_select :news_date %>
  </p>
  <p>
    <%= f.label :published %><br />
    <%= f.check_box :published %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @news %> |
<%= link_to 'Back', "/news" %>

<% end %>