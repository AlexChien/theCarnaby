<%content_for :main do%>
<h2>新增新闻</h2>

<hr class="space">

<% form_for(@news, :url => "/news") do |f| %>
  <%= f.error_messages %>
<fieldset>
  <p>
    <%= f.label "中文标题" %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label "新闻时间" %><br />
    <%= f.date_select :news_date %>
  </p>
  <p>
    <%= f.label "是否发布" %><br />
    <%= f.check_box :published %>
  </p>
  <p>
    <%= f.label "英文标题" %><br />
    <%= f.text_field :title_en %>
  </p>
  <p>
    <%= f.label "中文正文（图片请限制宽度：最大260像素）" %><br />
	<%= fckeditor_textarea("news", "body", :toolbarSet => 'Simple', :width => '100%', :height => '350px',  :path => "/") %>
  </p>
  <p>
    <%= f.label "英文正文（图片请限制宽度：最大260像素）" %><br />
	<%= fckeditor_textarea("news", "body_en", :toolbarSet => 'Simple', :width => '100%', :height => '350px',  :path => "/") %>
  </p>

  <p>
    <%= f.submit '提交' %>
  </p>
</fieldset>
<%end%>

<%end%>

<%content_for :sidebar do%>
	<%=render :partial=>"search"%>
<%end%>