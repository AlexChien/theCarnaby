<h1>Listing coupons</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Detail</th>
    <th>Discount</th>
    <th>Product</th>
    <th>Brand</th>
    <th>Shop</th>
  </tr>

<% @coupons.each do |coupon| %>
  <tr>
    <td><%=h coupon.title %></td>
    <td><%=h coupon.detail %></td>
    <td><%=h coupon.discount %></td>
    <td><%=h coupon.product_id %></td>
    <td><%=h coupon.brand_id %></td>
    <td><%=h coupon.shop_id %></td>
    <td><%= link_to 'Show', coupon %></td>
    <td><%= link_to 'Edit', edit_coupon_path(coupon) %></td>
    <td><%= link_to 'Destroy', coupon, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New coupon', new_coupon_path %>