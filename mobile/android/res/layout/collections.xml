<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent">
  	<RelativeLayout 
  		android:layout_width="0dp" 
  		android:layout_height="wrap_content" 
  		android:layout_weight="1" android:layout_marginRight="5dp">
		  <ImageView android:id="@+id/col_cover_image_2"
		  	android:src="@drawable/cover_collection_2"
		  	android:layout_width="wrap_content" android:layout_height="wrap_content" />
		  <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
		  	android:layout_below="@id/col_cover_image_2"
		  	android:text="@string/label_collection2" 
		  	android:layout_marginTop="-100dp" 
		  	android:layout_centerInParent="true" 
		  	style="@style/theCarnaby.CollectionCoverTitle"
		  	android:clickable="true" />
	</RelativeLayout>
	
  	<RelativeLayout 
	  	android:layout_width="0dp" 
	  	android:layout_height="wrap_content" 
	  	android:layout_weight="1" 
	  	android:layout_marginLeft="5dp">
		  <ImageView android:id="@+id/col_cover_image_3"
		  	android:src="@drawable/cover_collection_3"
		  	android:layout_width="wrap_content" android:layout_height="wrap_content" />
		  <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
		  	android:layout_below="@id/col_cover_image_3"
		  	android:text="@string/label_collection3"
		  	android:layout_marginTop="-100dp" 
		  	android:layout_centerInParent="true" 
		  	style="@style/theCarnaby.CollectionCoverTitle"
		  	android:clickable="true" />
	</RelativeLayout>
</LinearLayout>
