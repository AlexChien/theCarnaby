<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:orientation="vertical"
>
	<ImageView
		android:id="@+id/sd_image"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:src="@drawable/shop_pic_demo" 
		android:layout_marginTop="0dp" android:layout_gravity="top"
	/>
	 <TextView 
	 	android:id="@+id/sd_name_txt" style="@style/theCarnaby.CollectionCoverTitle"
	 	android:layout_width="fill_parent" android:layout_height="wrap_content"
	 	android:layout_below="@id/sd_image" />
	 <TextView 
	 	android:id="@+id/sd_address_txt"
	 	android:layout_width="fill_parent" android:layout_height="wrap_content" 
	 	android:layout_below="@id/sd_name_txt" />
	 <Button
	 	android:id="@+id/goto_map_btn" 
	 	android:text="@string/label_gotomap" 
	 	android:layout_width="fill_parent" 
	 	android:layout_height="wrap_content"
	 	android:layout_alignParentBottom="true" 
	 />
</RelativeLayout>
