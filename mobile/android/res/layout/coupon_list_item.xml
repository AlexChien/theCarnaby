<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="wrap_content"
  android:layout_margin="10dp" android:orientation="vertical"
  >
  <LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="wrap_content" android:background="@drawable/list_item_block_bg"
  android:padding="10dp" android:orientation="vertical" android:gravity="top|center_horizontal"
  android:layout_marginTop="5dp" android:layout_marginBottom="5dp"
  >
  <ImageView
  	android:src="@drawable/coupon_demo" 
  	layout_padding="5dp"
  	android:layout_width="fill_parent" android:layout_height="wrap_content"
  	/>
  <TextView
  	android:id="@+id/cp_title" style="@style/theCarnaby.ShopDetailTitleApperance"
  	android:layout_width="wrap_content" android:layout_height="wrap_content"
  	android:singleLine="false"
  	/>
  <TextView
  	android:id="@+id/cp_description" style="@style/theCarnaby.ShopDetailTextApperance"
  	android:layout_width="wrap_content" android:layout_height="wrap_content"
  	android:layout_marginTop="5dp" android:layout_marginBottom="10dp"
  	android:singleLine="false"
  	/>
  <Button
  	android:id="@+id/cp_gotomap_btn"
  	android:layout_width="fill_parent" android:layout_height="wrap_content"
  	android:paddingLeft="5dp" android:paddingRight="5dp" 
  	android:text="@string/lable_viewshop"
  />
  <Button
  	android:id="@+id/cp_share_btn"
  	android:layout_width="fill_parent" android:layout_height="wrap_content"
  	android:paddingLeft="5dp" android:paddingRight="5dp"
  	android:text="@string/lable_sharecoupon"
  />
  </LinearLayout>
</LinearLayout>
