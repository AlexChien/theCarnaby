<div id="pageTitle">
	<h1><%= @shop.name%></h1>
</div>

<div id="toolbar">
        <%= link_to "Back", :action => :index %>
        <%= link_to "Edit", :action => :edit, :id => @shop.object %>
</div>


<div id="content">

    <table>
      
      <tr>
    	<td class="itemLabel">Name</td>
        <td class="itemValue"><%= @shop.name%></td>
      </tr>
      
      <tr>
    	<td class="itemLabel">Description</td>
        <td class="itemValue"><%= @shop.description%></td>
      </tr>
      
      <tr>
    	<td class="itemLabel">Address</td>
        <td class="itemValue"><%= @shop.address%></td>
      </tr>
      
      <tr>
    	<td class="itemLabel">Coordinate</td>
        <td class="itemValue"><%= @shop.coordinate%></td>
      </tr>
      
    </table>
</div>