<div id="pageTitle">
		<h1>Edit <%= @serial.name%></h1>
</div>

<div id="toolbar">
    <%= link_to "Back", :action => :show, :id => @serial.object %>
    <%= link_to "Delete", :action => :delete, :id => @serial.object %>
</div>


<div id="content">
    <form method="POST" action="<%= url_for :action => :update %>">
    	<input type="hidden" name="id" value="<%= @serial.object %>"/>
            <table>
        		
                    <tr>
            			<td class="itemLabel">Name: </td>
              			<td class="itemValue"><input type="text" name="serial[name]" value="<%= @serial.name %>"/></td>
          		    </tr>
        		
                    <tr>
            			<td class="itemLabel">Description: </td>
              			<td class="itemValue"><input type="text" name="serial[description]" value="<%= @serial.description %>"/></td>
          		    </tr>
        		
                    <tr>
            			<td class="itemLabel">Brand: </td>
              			<td class="itemValue"><input type="text" name="serial[brand_id]" value="<%= @serial.brand_id %>"/></td>
          		    </tr>
        		
            </table>
            <input type="submit" class="standardButton" value="Update" />
    </form>
</div>
