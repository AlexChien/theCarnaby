<div class="pageTitle">
  <h1>Edit <%= @brand.name %></h1>
</div>

<div class="toolbar">
  <div class="leftItem backButton">
    <a href="<%= url_for :action => :show, :id => @brand.object %>">Cancel</a>
  </div>
  <div class="rightItem regularButton">
    <a class="button" href="<%= url_for :action => :delete, :id => @brand.object %>">Delete</a>
  </div>
</div>

<div class="content">
  <form method="POST" action="<%= url_for :action => :update %>">
    <input type="hidden" name="id" value="<%= @brand.object %>"/>
    <ul>
      
          <li>
            <label for="brand[name]" class="fieldLabel">Name</label>
            <input type="text" name="brand[name]" value="<%= @brand.name %>" <%= placeholder( "Name" ) %> />
          </li>
      
          <li>
            <label for="brand[description]" class="fieldLabel">Description</label>
            <input type="text" name="brand[description]" value="<%= @brand.description %>" <%= placeholder( "Description" ) %> />
          </li>
      
          <li>
            <label for="brand[logo]" class="fieldLabel">Logo</label>
            <input type="text" name="brand[logo]" value="<%= @brand.logo %>" <%= placeholder( "Logo" ) %> />
          </li>
      
    </ul>
    <input type="submit" class="standardButton" value="Update"/>
  </form>
</div>