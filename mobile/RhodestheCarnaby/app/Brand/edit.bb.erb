<div id="pageTitle">
		<h1>Edit <%= @brand.name%></h1>
</div>

<div id="toolbar">
    <%= link_to "Back", :action => :show, :id => @brand.object %>
    <%= link_to "Delete", :action => :delete, :id => @brand.object %>
</div>


<div id="content">
    <form method="POST" action="<%= url_for :action => :update %>">
    	<input type="hidden" name="id" value="<%= @brand.object %>"/>
            <table>
        		
                    <tr>
            			<td class="itemLabel">Name: </td>
              			<td class="itemValue"><input type="text" name="brand[name]" value="<%= @brand.name %>"/></td>
          		    </tr>
        		
                    <tr>
            			<td class="itemLabel">Description: </td>
              			<td class="itemValue"><input type="text" name="brand[description]" value="<%= @brand.description %>"/></td>
          		    </tr>
        		
                    <tr>
            			<td class="itemLabel">Logo: </td>
              			<td class="itemValue"><input type="text" name="brand[logo]" value="<%= @brand.logo %>"/></td>
          		    </tr>
        		
            </table>
            <input type="submit" class="standardButton" value="Update" />
    </form>
</div>
