<div class="pageTitle">
  <h1>New <%= @collection.title %></h1>
</div>

<div class="toolbar">
  <div class="leftItem backButton">
    <a class="cancel" href="<%= url_for :action => :index %>">Cancel</a>
  </div>
</div>

<div class="content">
  <form method="POST" action="<%= url_for :action => :create %>">
    <input type="hidden" name="id" value="<%= @collection.object %>"/>
    <ul>
      
          <li>
            <label for="collection[name]" class="fieldLabel">Name</label>
            <input type="text" name="collection[name]" <%=
            placeholder("Name") %> />
          </li>
      
          <li>
            <label for="collection[description]" class="fieldLabel">Description</label>
            <input type="text" name="collection[description]" <%=
            placeholder("Description") %> />
          </li>
      
          <li>
            <label for="collection[brand]" class="fieldLabel">Brand</label>
            <input type="text" name="collection[brand]" <%=
            placeholder("Brand") %> />
          </li>
      
    </ul>
    <input type="submit" class="standardButton" value="Create"/>
  </form>
</div>