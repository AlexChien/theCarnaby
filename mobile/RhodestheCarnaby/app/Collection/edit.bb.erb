<div id="pageTitle">
		<h1>Edit <%= @collection.name%></h1>
</div>

<div id="toolbar">
    <%= link_to "Back", :action => :show, :id => @collection.object %>
    <%= link_to "Delete", :action => :delete, :id => @collection.object %>
</div>


<div id="content">
    <form method="POST" action="<%= url_for :action => :update %>">
    	<input type="hidden" name="id" value="<%= @collection.object %>"/>
            <table>
        		
                    <tr>
            			<td class="itemLabel">Name: </td>
              			<td class="itemValue"><input type="text" name="collection[name]" value="<%= @collection.name %>"/></td>
          		    </tr>
        		
                    <tr>
            			<td class="itemLabel">Description: </td>
              			<td class="itemValue"><input type="text" name="collection[description]" value="<%= @collection.description %>"/></td>
          		    </tr>
        		
                    <tr>
            			<td class="itemLabel">Brand: </td>
              			<td class="itemValue"><input type="text" name="collection[brand]" value="<%= @collection.brand %>"/></td>
          		    </tr>
        		
            </table>
            <input type="submit" class="standardButton" value="Update" />
    </form>
</div>
