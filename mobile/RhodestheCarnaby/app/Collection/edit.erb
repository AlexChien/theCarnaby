<div class="pageTitle">
  <h1>Edit <%= @collection.name %></h1>
</div>

<div class="toolbar">
  <div class="leftItem backButton">
    <a href="<%= url_for :action => :show, :id => @collection.object %>">Cancel</a>
  </div>
  <div class="rightItem regularButton">
    <a class="button" href="<%= url_for :action => :delete, :id => @collection.object %>">Delete</a>
  </div>
</div>

<div class="content">
  <form method="POST" action="<%= url_for :action => :update %>">
    <input type="hidden" name="id" value="<%= @collection.object %>"/>
    <ul>
      
          <li>
            <label for="collection[name]" class="fieldLabel">Name</label>
            <input type="text" name="collection[name]" value="<%= @collection.name %>" <%= placeholder( "Name" ) %> />
          </li>
      
          <li>
            <label for="collection[description]" class="fieldLabel">Description</label>
            <input type="text" name="collection[description]" value="<%= @collection.description %>" <%= placeholder( "Description" ) %> />
          </li>
      
          <li>
            <label for="collection[brand]" class="fieldLabel">Brand</label>
            <input type="text" name="collection[brand]" value="<%= @collection.brand %>" <%= placeholder( "Brand" ) %> />
          </li>
      
    </ul>
    <input type="submit" class="standardButton" value="Update"/>
  </form>
</div>