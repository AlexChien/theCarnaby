<div class="pageTitle">
  <h1><%= @image.title %></h1>
</div>

<div class="toolbar">
  <div class="leftItem backButton">
    <a href="<%= url_for :action => :index %>">Back</a>
  </div>
  <div class="rightItem regularButton">
    <a href="<%= url_for :action => :edit, :id => @image.object %>">Edit</a>
  </div>
</div>

<div class="content">
  <ul>
    
        <li>
          <div class="itemLabel">Title</div>
          <div class="itemValue"><%= @image.title %></div>
        </li>
    
        <li>
          <div class="itemLabel">Description</div>
          <div class="itemValue"><%= @image.description %></div>
        </li>
    
        <li>
          <div class="itemLabel">BrandId</div>
          <div class="itemValue"><%= @image.brand_id %></div>
        </li>
    
        <li>
          <div class="itemLabel">SerialId</div>
          <div class="itemValue"><%= @image.serial_id %></div>
        </li>
    
        <li>
          <div class="itemLabel">ProductId</div>
          <div class="itemValue"><%= @image.product_id %></div>
        </li>
    
        <li>
          <div class="itemLabel">ShopId</div>
          <div class="itemValue"><%= @image.shop_id %></div>
        </li>
    
  </ul>
</div>