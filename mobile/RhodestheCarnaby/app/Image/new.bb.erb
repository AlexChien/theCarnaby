<div id="pageTitle">
    <h1>New Image</h1>
</div>

<div id="toolbar">
    <%= link_to "Back", :action => :index %>
</div>


<div id="content">

    <form method="POST" action="<%= url_for :action => :create %>">
	    <input type="hidden" name="id" value="<%= @image.object %>"/>
        <table>
    		
    		  <tr>
    			  <td class="itemLabel">Title: </td>
    			  <td class="itemValue"><input type="text" name="image[title]"/></td>
    		  </tr>
    		
    		  <tr>
    			  <td class="itemLabel">Description: </td>
    			  <td class="itemValue"><input type="text" name="image[description]"/></td>
    		  </tr>
    		
    		  <tr>
    			  <td class="itemLabel">Brand: </td>
    			  <td class="itemValue"><input type="text" name="image[brand_id]"/></td>
    		  </tr>
    		
    		  <tr>
    			  <td class="itemLabel">Serial: </td>
    			  <td class="itemValue"><input type="text" name="image[serial_id]"/></td>
    		  </tr>
    		
    		  <tr>
    			  <td class="itemLabel">Product: </td>
    			  <td class="itemValue"><input type="text" name="image[product_id]"/></td>
    		  </tr>
    		
    		  <tr>
    			  <td class="itemLabel">Shop: </td>
    			  <td class="itemValue"><input type="text" name="image[shop_id]"/></td>
    		  </tr>
    		
        </table>
        <input type="submit" class="standardButton" value="Create" />
    </form>
</div>