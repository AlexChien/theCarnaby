<div id="pageTitle">
		<h1>Edit <%= @image.title%></h1>
</div>

<div id="toolbar">
    <%= link_to "Back", :action => :show, :id => @image.object %>
    <%= link_to "Delete", :action => :delete, :id => @image.object %>
</div>


<div id="content">
    <form method="POST" action="<%= url_for :action => :update %>">
    	<input type="hidden" name="id" value="<%= @image.object %>"/>
            <table>
        		
                    <tr>
            			<td class="itemLabel">Title: </td>
              			<td class="itemValue"><input type="text" name="image[title]" value="<%= @image.title %>"/></td>
          		    </tr>
        		
                    <tr>
            			<td class="itemLabel">Description: </td>
              			<td class="itemValue"><input type="text" name="image[description]" value="<%= @image.description %>"/></td>
          		    </tr>
        		
                    <tr>
            			<td class="itemLabel">Brand: </td>
              			<td class="itemValue"><input type="text" name="image[brand_id]" value="<%= @image.brand_id %>"/></td>
          		    </tr>
        		
                    <tr>
            			<td class="itemLabel">Serial: </td>
              			<td class="itemValue"><input type="text" name="image[serial_id]" value="<%= @image.serial_id %>"/></td>
          		    </tr>
        		
                    <tr>
            			<td class="itemLabel">Product: </td>
              			<td class="itemValue"><input type="text" name="image[product_id]" value="<%= @image.product_id %>"/></td>
          		    </tr>
        		
                    <tr>
            			<td class="itemLabel">Shop: </td>
              			<td class="itemValue"><input type="text" name="image[shop_id]" value="<%= @image.shop_id %>"/></td>
          		    </tr>
        		
            </table>
            <input type="submit" class="standardButton" value="Update" />
    </form>
</div>
