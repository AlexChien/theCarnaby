<div id="pageTitle">
		<h1>Edit <%= @coupon.title%></h1>
</div>

<div id="toolbar">
    <%= link_to "Back", :action => :show, :id => @coupon.object %>
    <%= link_to "Delete", :action => :delete, :id => @coupon.object %>
</div>


<div id="content">
    <form method="POST" action="<%= url_for :action => :update %>">
    	<input type="hidden" name="id" value="<%= @coupon.object %>"/>
            <table>
        		
                    <tr>
            			<td class="itemLabel">Title: </td>
              			<td class="itemValue"><input type="text" name="coupon[title]" value="<%= @coupon.title %>"/></td>
          		    </tr>
        		
                    <tr>
            			<td class="itemLabel">Detail: </td>
              			<td class="itemValue"><input type="text" name="coupon[detail]" value="<%= @coupon.detail %>"/></td>
          		    </tr>
        		
                    <tr>
            			<td class="itemLabel">Discount: </td>
              			<td class="itemValue"><input type="text" name="coupon[discount]" value="<%= @coupon.discount %>"/></td>
          		    </tr>
        		
                    <tr>
            			<td class="itemLabel">Product: </td>
              			<td class="itemValue"><input type="text" name="coupon[product_id]" value="<%= @coupon.product_id %>"/></td>
          		    </tr>
        		
                    <tr>
            			<td class="itemLabel">Brand: </td>
              			<td class="itemValue"><input type="text" name="coupon[brand_id]" value="<%= @coupon.brand_id %>"/></td>
          		    </tr>
        		
                    <tr>
            			<td class="itemLabel">Shop: </td>
              			<td class="itemValue"><input type="text" name="coupon[shop_id]" value="<%= @coupon.shop_id %>"/></td>
          		    </tr>
        		
            </table>
            <input type="submit" class="standardButton" value="Update" />
    </form>
</div>
